extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= `${projectName}`

        p.lead.text-light= `${projectDescription}`

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
        each tech in projectTech
          li= `${tech}`

        a.button.expanded(href=`${projectLive}`, target="_blank") Live Demo
        a.button.expanded(href=`${projectGit}`, target="_blank") GitHub Repo
    
    img.image(src=`${projectImg[0]}`)
    img.image(src='https://placehold.it/1200x550')
    img.image(src='https://placehold.it/1200x550')